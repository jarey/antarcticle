<div class="common-width common-offset">
  <% flash.each do |key, value| %>
      <% if [:notice, :error, :info].include? key %>
          <% if key == :notice
               key = :success
             end %>
          <%= content_tag(:div, class: "alert alert-#{key}") do %>
              <a class="close" data-dismiss="alert" href="#">Ã—</a> <%= value %>
          <% end %>
      <% end %>
  <% end %>
</div>