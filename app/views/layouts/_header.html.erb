<nav class="navbar navbar-inverse nav">
  <div class="navbar-inner">
    <div class="span10 offset1 global-block">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to root_path, class: "brand" do %>
        <i class="icon-book"></i> <%= CONFIG["title"] || "Antarcticle" %>
      <% end %>
      <div class="nav-collapse collapse">
        <% if CONFIG.has_key? "menu" %>
          <ul class="nav custom-menu">
            <li class="divider-vertical"></li>
            <% CONFIG["menu"].each do |entry| %>
              <li>
                <%= link_to entry["name"], entry["url"] %>
              </li>
              <li class="divider-vertical"></li>
            <% end %>
          </ul>
        <% end %>
        <div class="pull-right">
          <ul class="nav pull-right">
            <% if signed_in? %>
                <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Welcome, <%= current_user.username %> <b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    <li>
                      <%= link_to user_path(current_user) do %>
                          <i class="icon-file"></i> My articles
                      <% end %>
                    </li>
                    <li class="divider"></li>
                    <li>
                      <%= link_to signout_path, method: "delete" do %>
                          <i class="icon-signout"></i> Sign out
                      <% end %>
                    </li>
                  </ul>
                </li>
            <% else %>
                <li>
                  <%= link_to signin_path do %>
                      <i class="icon-signin icon-white"></i> Sign in
                  <% end %>
                </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</nav>
