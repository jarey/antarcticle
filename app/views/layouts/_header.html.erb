<div class="navbar navbar-inverse nav">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to root_path, class: "brand" do %>
        <i class="icon-book"></i> Antarcticle
      <% end %>
      <div class="nav-collapse collapse">
        <ul class="nav">
          <li class="divider-vertical"></li>
          <li>
            <%= link_to root_path do %>
                <i class="icon-home icon-white"></i> Home
            <% end %>
          </li>
        </ul>
        <div class="pull-right">
          <ul class="nav pull-right">
            <% if signed_in? %>
                <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Welcome, <%= current_user.username %> <b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    <li>
                      <%= link_to user_path(current_user) do %>
                          <i class="icon-file"></i> My articles
                      <% end %>
                    </li>
                    <li class="divider"></li>
                    <li>
                      <%= link_to signout_path, method: "delete" do %>
                          <i class="icon-signout"></i> Sign out
                      <% end %>
                    </li>
                  </ul>
                </li>
            <% else %>
                <li>
                  <%= link_to signin_path do %>
                      <i class="icon-signin icon-white"></i> Sign in
                  <% end %>
                </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>