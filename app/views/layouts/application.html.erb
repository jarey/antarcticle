<!DOCTYPE html>
<html>
<head>
  <title>Antarcticle</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
</head>
<body>
    <%= render 'layouts/header' %>

    <div class="container">
        <div>
            <% flash.each do |key, value| %>
                <% if [:notice, :error, :info].include? key %>
                  <% if key == :notice
                    key = :success
                  end %>
                  <%= content_tag(:div, class: "alert alert-#{key}") do %>
                      <a class="close" data-dismiss="alert" href="#">Ã—</a> <%= value %>
                  <% end %>
                <% end %>
            <% end %>
        </div>

      <%= yield %>

    </div>

</body>
</html>
